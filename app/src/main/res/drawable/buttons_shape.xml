<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="2dp"
                android:color="#C2AB18"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>

            <solid android:color="#00ffffff"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="3dp"
                android:color="#646464"/>
            <corners
                android:radius="7dp" />

            <padding
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                android:bottom="2dp"/>

            <solid android:color="#00ffffff"/>
        </shape>
    </item>
</selector>